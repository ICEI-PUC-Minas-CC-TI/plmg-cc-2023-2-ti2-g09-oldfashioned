package model;

public class Usuario {
	private String usuario;
	private String nome;
	private String email;
	private int idade;
	private String genero;
	private	byte[] foto;
	private String senha;

    //Construtores
	public Usuario(){
        usuario = nome = email = genero = senha = "";
        idade = 0;
        foto = null;
    }
    public Usuario(String usuario, String nome, String email, int idade, String genero, byte[] foto, String senha){
        this.usuario = usuario;
        this.nome = nome;
        this.email = email;
        this.idade = idade;
        this.genero = genero;
        this.foto = foto;
        this.senha = senha;
    }
    
    //Setters e Getters
    public void setUsuario(String usuario){
        this.usuario = usuario;
    }
    public String getUsuario(){
        return usuario;
    }
    public void setNome(String nome){
        this.nome = nome;
    }
    public String getNome(){
        return nome;
    }
    public void setEmail(String email){
        this.email = email;
    }
    public String getEmail(){
        return email;
    }
    public void setIdade(int idade){
        this.idade = idade;
    }
    public int getIdade(){
        return idade;
    }
    public void setGenero(String genero){
        this.genero = genero;
    }
    public String getGenero(){
        return genero;
    }
    public void setFoto(byte[] foto){
        this.foto = foto;
    }
    public byte[] getFoto(){
        return foto;
    }
    public void setSenha(String senha){
        this.senha = senha;
    }
    public String getSenha(){
        return senha;
    }
}